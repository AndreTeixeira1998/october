{
  "name": "octowise",
  "version": "1.0.0",
  "description": "An application for syncing Kindle highlights between various sources",
  "main": "src/main/index.js",
  "repository": "git@github.com:marcus-crane/octowise",
  "author": "Marcus Crane <marcus@utf9k.net>",
  "license": "MIT",
  "scripts": {
    "dev": "cross-env NODE_ENV=development elecrun --vite",
    "preview": "yarn build && cross-env NODE_ENV=production electron ./app/",
    "build": "elecrun build && vite build",
    "clean": "elecrun clean",
    "lint": "eslint . --ext js,ts",
    "postinstall": "electron-builder install-app-deps",
    "prettier": "prettier -w ."
  },
  "simple-git-hooks": {
    "pre-commit": "yarn run prettier && yarn run lint-staged"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix"
  },
  "devDependencies": {
    "@vitejs/plugin-react-refresh": "^1.3.4",
    "cross-env": "^7.0.3",
    "electron": "^13.1.4",
    "electron-builder": "^22.11.7",
    "electron-run": "^2.0.1",
    "electron-updater": "^4.3.9",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.24.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "simple-git-hooks": "^2.5.1",
    "spectron": "^15.0.0",
    "vite": "^2.3.8"
  }
}
